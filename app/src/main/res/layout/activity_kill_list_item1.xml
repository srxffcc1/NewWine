<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/kan_image"
                android:layout_width="94dp"
                android:src="@drawable/kanjiatu"
                android:layout_height="94dp" />
            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/kan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="江小白白酒40度100ml*6瓶小瓶..."
                    android:textColor="#ff1d1d1d"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/kan_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已砍30.52元"
                    android:textColor="#ffa0a0a0"
                    android:textSize="12sp"
                    />
                <LinearLayout
                    android:id="@+id/timetextneedshow"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@drawable/text_boder_r_w_kanjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:layout_margin="1dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:id="@+id/hour"
                        android:text="20"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"/>
                    <TextView
                        android:background="@drawable/text_boder_r_w_kanjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:layout_margin="1dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:id="@+id/min"
                        android:text="04"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"/>
                    <TextView
                        android:background="@drawable/text_boder_r_w_kanjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:layout_margin="1dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:id="@+id/sec"
                        android:text="05"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="后结束"
                        android:textColor="#ff1d1d1d"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/pass_kan"
                        android:background="@drawable/text_boder_r_red"
                        android:layout_width="wrap_content"
                        android:padding="3dp"
                        android:layout_height="wrap_content"
                        android:text="继续砍价"
                        android:textColor="#fffffefe"
                        android:textSize="13sp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ececec"></LinearLayout>

</LinearLayout>