<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/zup_bg"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="初级代理权益："
            android:textColor="#ff37383a"
            android:textSize="14sp"
        />
        <TextView
            android:id="@+id/dintroduce"
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="价值418元的代理专属积分+30个名额的拉新奖励（每个15元）+
一级粉丝消费返利+购物返商品价10%的等值元宝+邀请代理人返利
"
            android:textColor="#ff37383a"
            android:textSize="10sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/passmore"
        android:layout_width="match_parent"
        android:background="#FFF"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dintroduce2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购买以下任意商品即可升级成为初级代理"
            android:textColor="#ff37383a"
            android:textSize="10sp"
            />
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多>"
            android:textColor="#ffff0c14"
            android:textSize="13sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dimagel1"
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dimage1"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/dtitle1"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#ff333333"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/dmoney1"
                android:paddingTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffff0000"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"></LinearLayout>
        <LinearLayout
            android:id="@+id/dimagel2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dimage2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/dtitle2"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#ff333333"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/dmoney2"
                android:paddingTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffff0000"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
