<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/kill_bg"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingLeft="15dp"
            android:paddingTop="3dp"
            android:layout_width="wrap_content"
            android:src="@drawable/kill_title"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_margin="15dp"
            android:background="@drawable/text_boder_r_et"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/text_boder_sq3"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/k_image"
                        android:layout_width="92dp"
                        android:src="@drawable/kanjiatu"
                        android:layout_height="92dp" />
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/k_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="江小白白酒40度100ml*6瓶小瓶..."
                            android:textColor="#ff1d1d1d"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/k_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="原价99.9元"
                            android:textColor="#ffa0a0a0"
                            android:textSize="11sp"
                            />
                        <TextView
                            android:id="@+id/k_kkk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="砍到0元拿"
                            android:textColor="#ffff0000"
                            android:textSize="13sp"
                            />
                        <LinearLayout
                            android:id="@+id/timetextneedshow"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background="@drawable/text_boder_r_w_kanjia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_margin="1dp"
                                android:paddingTop="1dp"
                                android:paddingBottom="1dp"
                                android:paddingRight="3dp"
                                android:paddingLeft="3dp"
                                android:id="@+id/hour"
                                android:text=""/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"/>
                            <TextView
                                android:background="@drawable/text_boder_r_w_kanjia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_margin="1dp"
                                android:paddingTop="1dp"
                                android:paddingBottom="1dp"
                                android:paddingRight="3dp"
                                android:paddingLeft="3dp"
                                android:id="@+id/min"
                                android:text=""/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"/>
                            <TextView
                                android:background="@drawable/text_boder_r_w_kanjia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_margin="1dp"
                                android:paddingTop="1dp"
                                android:paddingBottom="1dp"
                                android:paddingRight="3dp"
                                android:paddingLeft="3dp"
                                android:id="@+id/sec"
                                android:text=""/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="后结束"
                                android:textColor="#ff1d1d1d"
                                android:textSize="13sp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/k_yikan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff343434"
                    android:textSize="13sp"
                    />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:id="@+id/progressz"
                        android:max="1000"
                        android:progress="50"
                        android:layout_width="match_parent"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progressz_bar"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/pass_kan"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/yaoqing"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请好友砍一刀"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    />
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="砍价帮"
                    android:textColor="#ff3b3b3b"
                    android:textSize="15sp"
                    />
                <LinearLayout
                    android:id="@+id/add_bang"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>